/// multi-branch pipeline
pipeline {
    agent none
    stages {

        stage('test') {
            steps {
                script {
                    echo "Testing..."
                    echo "testing the pipeline $BRANCH_NAME"
                }
            }
        }

        stage('build') {
            when {
                expression {
                    BRANCH_NAME == 'master'
                }
            }
            steps {
                script {
                    echo "Building..."
                }
            }
        }

        stage('deploy') {
            when {
                expression {
                    BRANCH_NAME == 'master'
                }
            }
            steps {
                script {
                    echo "Deploying..."
                }
            }
        }
    }
}
